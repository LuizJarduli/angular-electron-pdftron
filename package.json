{
  "name": "angular-electron-pdftron",
  "version": "0.0.0",
  "main": "app/main.js",
  "description": "An Angular 19 + Electron 35 boilerplate for apryse PDFTron web apps",
  "license": "BSD-3-Clause",
  "scripts": {
    "ng": "ng",
    "dev": "npx concurrently \"npm run ng:start\" \"npm run electron:start\"",
    "start": "electron-forge start",
    "ng:start": "ng serve",
    "ng:dev": "npm run build:dev && npm run electron:start-tsc && electron .",
    "electron:start-tsc": "tsc -p tsconfig.electron.json",
    "electron:start": "npx wait-on tcp:4200 && npm run electron:start-tsc && electron . --serve",
    "build": "ng build",
    "build:dev": "ng build -c development",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "move:webviewer": "node scripts/move-webviewer.js",
    "postinstall": "npm run move:webviewer",
    "premake": "npm run build:dev",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@electron/remote": "2.1.2",
    "@pdftron/webviewer": "11.3.0",
    "electron-squirrel-startup": "1.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.1",
    "@angular/cli": "^19.2.1",
    "@angular/compiler-cli": "^19.2.0",
    "@electron-forge/cli": "7.7.0",
    "@electron-forge/maker-deb": "7.7.0",
    "@electron-forge/maker-rpm": "7.7.0",
    "@electron-forge/maker-squirrel": "7.7.0",
    "@electron-forge/maker-zip": "7.7.0",
    "@electron-forge/plugin-auto-unpack-natives": "7.7.0",
    "@electron-forge/plugin-fuses": "7.7.0",
    "@electron/fuses": "1.8.0",
    "@types/jasmine": "~5.1.0",
    "concurrently": "9.1.2",
    "electron": "35.0.0",
    "electron-debug": "4.1.0",
    "electron-reloader": "1.2.3",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "tsx": "4.19.3",
    "typescript": "~5.7.2",
    "wait-on": "8.0.2"
  }
}